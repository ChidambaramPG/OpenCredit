<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">


    <AutoCompleteTextView
        android:id="@+id/itemSrchTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView21"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Search Item"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|center_horizontal"
        android:text="Search Item"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/slNoTxt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/itemSrchTxt"
        android:layout_below="@+id/itemSrchTxt"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:text="1"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/discntTxt"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/itemSrchTxt"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/priceDetLyt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/itemSrchTxt"
        android:layout_below="@+id/slNoTxt"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="80dp"
        android:background="@color/common_google_signin_btn_text_light_default">

        <TextView
            android:id="@+id/unitTaxTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView26"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/textView24"
            android:text="0.0"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/unitPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView24"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/textView24"
            android:text="0.0"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Unit Price : "
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemSrchTxt"
            android:layout_below="@+id/textView24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Unit Tax : "
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/unitPriceTxt"
            android:layout_marginEnd="10dp"
            android:text="Total "
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totPricTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView28"
            android:layout_centerVertical="true"
            android:text="0.0"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/addItem"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemSrchTxt"
        android:layout_below="@+id/priceDetLyt"
        android:layout_marginEnd="-10dp"
        android:text="Add" />

</RelativeLayout>